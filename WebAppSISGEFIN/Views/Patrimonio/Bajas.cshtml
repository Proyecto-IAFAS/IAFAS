
@{
    ViewBag.Title = "Bajas";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3><i class="fa fa-users" aria-hidden="true"></i> BAJAS</h3>
                </div>
                <div class="card-block">
                    <div class="form-row">
                        <div class="form-group col-sm-1">
                            <label class="control-label">Periodo</label>
                            <input type="number" id="txtPeriodoCons" class="control-form PopupCons" value="@ViewBag.Anio">
                        </div>
                        <div class="form-group col-md-2 m-3">
                            <button class="input-group-inverse btn btn-dark" id="btnConsultar" data-toggle="tooltip" data-placement="bottom" title="Consultar"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
                            <button class="input-group-inverse btn btn-primary" id="btnNuevo" data-toggle="tooltip" data-placement="bottom" title="Nuevo"><i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="table-responsive" id="divLista"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="modal custom-modal" tabindex="-1" role="dialog" aria-hidden="true" id="divPopupContainer" style="overflow-y:auto;">
                            <div class="modal-dialog modal-lg bg-personalizado" id="divPopupWindow" style="margin-top:30px;">
                                <div class="modal-content">
                                    <div id="divBarra" class="modal-header bg-personalizado" style="cursor:move">
                                        <h5 class="modal-title" id="tituloModal">Nuevo Activo Baja</h5>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="form-group col-sm-4">
                                                <input type="hidden" class="control-lectura Popup" id="txtIdRegistro" />
                                                <label class="control-label">Nro Resolución</label>
                                                <input type="number" class="control-form Reque Popup" id="txtNroResolucion">
                                            </div>
                                            <div class="form-group col-sm-4">
                                                <label class="control-label">Causal Baja</label>
                                                <select class="control-form Reque Popup" id="cboCausalBaja"></select>
                                            </div>
                                            <div class="form-group col-sm-4">
                                                <label class="control-label">Fecha Baja</label>
                                                <input type="date" class="control-form Reque Popup" id="dttFechaBaja">
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-5">
                                                <label class="control-label">Observaciones</label>
                                                <textarea class="control-form Popup" rows="2" id="ttaObservacion"></textarea>
                                            </div>
                                            <div class="form-group col-sm-3">
                                                <label class="control-label">Estado</label>
                                                <select class="control-form Reque Popup" id="cboEstado"></select>
                                            </div>
                                            <div class="form-group col-sm-2 section-nuevo-activo">
                                                <label class="control-label">Periodo</label>
                                                <input type="number" id="txtPeriodoItemsCons" class="control-form PopupCons" value="@ViewBag.Anio">
                                            </div>
                                            <div class="form-group col-sm-1 mt-3 section-nuevo-activo">
                                                <button class="btn btn-out waves-effect waves-light btn-info btn-square" id="btnConsutarItems"><i class="fa fa-search-plus" aria-hidden="true"></i></button>
                                            </div>
                                        </div>
                                        <hr />
                                        <div class="row m-2 section-nuevo-activo">
                                            <div class="form-group col-sm-12">
                                                <div class="table-responsive" style="height:315px;">
                                                    <table class='grilla bordered' style="width:1000px">
                                                        <thead>
                                                            <tr class="FilaHead">
                                                                <th style="white-space:pre-wrap;width:70px;display:none">idx</th>
                                                                <th style="white-space:pre-wrap;width:100px">Código Patrimonio</th>
                                                                <th style="white-space:pre-wrap;width:300px">Descripción</th>
                                                                <th style="white-space:pre-wrap;width:100px">Marca</th>
                                                                <th style="white-space:pre-wrap;width:100px">Modelo</th>
                                                                <th style="white-space:pre-wrap;width:100px">Serie</th>
                                                                <th style="white-space:pre-wrap;width:150px">Usuario Final</th>
                                                                <th style="white-space:pre-wrap;width:100px">Fecha Compra</th>
                                                                <th style="white-space:pre-wrap;width:100px">Valor Compra</th>
                                                                <th style="white-space:pre-wrap;width:100px">Fecha Alta</th>
                                                                <th style="white-space:pre-wrap;width:100px">Valor Inicial</th>
                                                                <th style="white-space:pre-wrap;width:100px">Conservación</th>
                                                                <th rowspan="2" style="white-space:pre-wrap;width:10px;"></th>
                                                            </tr>
                                                        </thead>
                                                        <tbody id="tbDetalleActivos"></tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row section-nuevo-activo">
                                            <div class="form-group col-md-12">
                                                <span id="spnNroItems" class="control-label">Items: 0</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button id="btnCancelar" class="btnCancelarForm" title="Cancelar"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancelar</button>
                                        <button id="btnGuardarBajas" class="btnGuardarForm bg-customer" title="Guardar datos"><span class="fa fa-save"></span>&nbsp;Grabar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="modal custom-modal" tabindex="-1" role="dialog" aria-hidden="true" id="divPopupContainerForm1" style="overflow-y:auto;">
                            <div class="modal-dialog modal-lg bg-personalizado" id="divPopupWindowForm1">
                                <div class="modal-content">
                                    <div id="divBarraForm1" class="modal-header bg-personalizado" style="cursor:move">
                                        <h5 class="modal-title">Seleccionar Items</h5>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="form-group col-md-12">
                                                <div class="table-responsive" id="listaItem" style="height:485px"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button class="btnCancelarForm" id="btnCancelarForm1" title="Cancelar"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancelar</button>
                                        <button class="btnGuardarForm bg-customer" id="btnSeleccionarItems" title="btn btn-success"><span class="fa fa-hand-o-left"></span>&nbsp;Agregar Items</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
<script src="~/Riztie/Js/App/AppPatrimonio.js"></script>

