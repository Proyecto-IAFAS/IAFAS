@{
    ViewBag.Title = "Mantenimiento de Activos";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3><i class="fa fa-users" aria-hidden="true"></i>CIERRE DE ACTIVOS</h3>
                </div>
                <div class="card-block">
                    <div class="form-row">
                        <div class="form-group col-sm-1">
                            <label class="control-label">Periodo</label>
                            <input type="number" id="txtPeriodoCons" class="control-form PopupCons" value="@ViewBag.Anio">
                        </div>
                        <div class="form-group col-md-4 m-3">
                            <button class="input-group-inverse btn btn-dark" id="btnConsultar" data-toggle="tooltip" data-placement="bottom" title="Consultar"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
                            <button class="input-group-inverse btn btn-primary" id="btnNuevo" data-toggle="tooltip" data-placement="bottom" title="Nuevo">Nuevo <i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></button>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="table-responsive" id="divLista"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="modal custom-modal" tabindex="-1" role="dialog" aria-hidden="true" id="divPopupContainer" style="overflow-y:auto;">
                            <div class="modal-dialog modal-sm bg-personalizado" id="divPopupWindow">
                                <div class="modal-content">
                                    <div id="divBarra" class="modal-header bg-personalizado" style="cursor:move">
                                        <h5 class="modal-title">Cierre de Activos</h5>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="form-group col-sm-12">
                                                <fieldset class="fieldset h-100">
                                                    <legend class="legend">Periodo Actual:</legend>
                                                    <div class="row">
                                                        <div class="form-group col-sm-6">
                                                            <label class="control-label">Año</label>
                                                            <input type="number" class="control-lectura Reque Popup" readonly id="txtAnioActual">
                                                        </div>
                                                        <div class="form-group col-sm-6">
                                                            <label class="control-label">Mes</label>
                                                            <select class="control-lectura Popup" disabled id="cboMesActual"></select>
                                                        </div>
                                                    </div>
                                                </fieldset>
                                            </div>
                                            <div class="form-group col-sm-12">
                                                <fieldset class="fieldset h-100">
                                                    <legend class="legend">Periodo Nuevo:</legend>
                                                    <div class="row">
                                                        <div class="form-group col-sm-6">
                                                            <label class="control-label">Año</label>
                                                            <input type="number" class="control-lectura NoPopup" readonly id="txtAnioNuevo">
                                                        </div>
                                                        <div class="form-group col-sm-6">
                                                            <label class="control-label">Mes</label>
                                                            <select class="control-lectura NoPopup" disabled id="cboMesNuevo"></select>
                                                        </div>
                                                    </div>
                                                </fieldset>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button id="btnCancelar" class="btnCancelarForm" title="Cancelar"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancelar</button>
                                        <button id="btnGuardar" class="btnGuardarForm bg-customer" title="Guardar datos"><span class="fa fa-save"></span>&nbsp;Grabar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
<script src="~/Riztie/Js/App/AppPatrimonio.js"></script>