
@{
    ViewBag.Title = "Comite";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3><i class="fa fa-users" aria-hidden="true"></i> COMITE</h3>
                </div>
                <div class="card-block">
                    <div class="form-row">
                        <div class="form-group col-sm-2">
                            <button class="input-group-inverse btn btn-primary" id="btnNuevo">Nuevo <i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="table-responsive" id="divLista"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="modal custom-modal" tabindex="-1" role="dialog" aria-hidden="true" id="divPopupContainer" style="overflow-y:auto;">
                            <div class="modal-dialog modal-xl bg-personalizado" id="divPopupWindow" style="margin-top:1px">
                                <div class="modal-content">
                                    <div id="divBarra" class="modal-header bg-personalizado" style="cursor:move">
                                        <h5 class="modal-title" id="tituloModal"></h5>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div id="divRegistro" class="col-xl-12">
                                                <fieldset class="fieldset">
                                                    <div class="row">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Año Fiscal</label>
                                                            <input type="hidden" class="control-form Popup" id="txtIdRegistro">
                                                            <input type="text" id="txtAnhio" class="control-form Reque Popup" value="@ViewBag.Anio" placeholder="@ViewBag.Anio">
                                                        </div>
                                                        
                                                        <div class="col-sm-4">
                                                            <label class="control-label">Nª Resolución</label>
                                                            <input type="text" id="txtNumResol" class="control-form Reque Popup">
                                                        </div>
                                                        <div class="col-sm-5">
                                                            <label class="control-label">Objecto de Contratación</label>
                                                            <input type="text" id="txtObjContrat" class="control-form Reque Popup">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Fecha</label>
                                                            <input type="date" id="txtFechaCom" class="control-form Reque Popup" value="@ViewBag.Fecha" data-fecha="@ViewBag.Fecha">
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Estado</label>
                                                            <select id="cboEstado" class="control-lectura Reque Popup"></select>
                                                        </div>
                                                        
                                                    </div>
                                                    <hr />
                                                    <div class="row">
                                                        <div class="col-sm-6">
                                                            <label class="control-label">Persona *</label>
                                                            <select id="cboPersona" class="SelectSearch control-form RequeItem Popup"></select>
                                                        </div>
                                                        <div class="col-sm-3">
                                                            <label class="control-label">Cargo *</label>
                                                            <select id="cboCargoPersona" class="control-form RequeItem Popup"></select>
                                                        </div>
                                                        <div class="col-sm-1 text-center">
                                                            <label class="control-label">&nbsp;&nbsp;</label>
                                                            <button class="btn btn-out waves-effect waves-light btn-info btn-square" id="btnAddItemsComite"><i class="fa fa-search-plus" aria-hidden="true"></i></button>
                                                        </div>
                                                    </div>
                                                    <br />
                                                    <div class="row">
                                                        <div class="form-group col-sm-12">
                                                            <div class="table-responsive" style="height:300px;">
                                                                <table class='grilla bordered'>
                                                                    <thead>
                                                                        <tr class='FilaHead'>
                                             
                                                                            <th rowspan="1" style="white-space:pre-wrap;width:10px;">#</th>
                                                                            <th rowspan="1" style="white-space:pre-wrap;width:500px;">PERSONAL</th>
                                                                            <th rowspan="1" style="white-space:pre-wrap;width:80px;">CARGO</th>
                                                                            <th rowspan="1" style="white-space:pre-wrap;width:40px;"></th>
                                                                        </tr>
                                                                    </thead>
                                                                    <tbody id="tbDetalleComite">
                                                                        @*<tr>
                                                                            <td style="display: none">IdPers</td>
                                                                            <td style="display: none">IdCargo</td>
                                                                            <td>1</td>
                                                                            <td>juan</td>
                                                                            <td>Presidente</td>
                                                                            <td></td>
                                                                        </tr>*@
                                                                    </tbody>
                                                                </table>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    @*<div class="row">
                                                        <div class="form-group col-md-12">
                                                            <span id="spnNroItems" class="control-label">Items: 0</span>
                                                        </div>
                                                    </div>*@
                                                </fieldset>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer" style="text-align:left">
                                        <button class="btnCancelarForm" id="btnCancelar" title="Cancelar"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancelar</button>
                                        <button class="btnGuardarForm bg-customer" id="btnGuardar" title="Guardar datos"><span class="fa fa-save"></span>&nbsp;Grabar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
<script src="~/Riztie/Js/App/AppLicitacion.js"></script>


