@{
    ViewBag.Title = "Configuracion";
    Layout = "~/Views/_LayoutPage.cshtml";
}
<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3><i class="fa fa-cogs" aria-hidden="true"></i> Configuración del Sistema</h3>
                </div>
                <div class="card-block">
                    <div class="page-wrapper">
                        <div class="page-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="tab-header card">
                                        <ul class="nav nav-tabs md-tabs tab-timeline" role="tablist" id="mytab">
                                            <li class="nav-item">
                                                <a class="nav-link active" data-toggle="tab" href="#parametro" role="tab">Parámetros</a>
                                                <div class="slide"></div>
                                            </li>
                                            <li class="nav-item">
                                                <a class="nav-link" data-toggle="tab" href="#autorizacion" role="tab">Autorizaciones</a>
                                                <div class="slide"></div>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="parametro" role="tabpanel">
                                            <div class="card">
                                                <div class="card-block">
                                                    <div class="view-info">
                                                        <div class="row form-group">
                                                            <label class="col-lg-3 control-label">Año Fiscal:</label>
                                                            <div class="col-lg-2">
                                                                <input type="number" id="txtAnioFiscal" class="control-form Reque popup" />
                                                            </div>
                                                        </div>
                                                        <div class="row form-group">
                                                            <label class="col-lg-3 control-label">Programación cuadro necesidades:</label>
                                                            <div class="col-lg-2">
                                                                <input type="number" id="txtAnioCN" class="control-form Reque popup" />
                                                            </div>
                                                        </div>
                                                        <div class="row form-group">
                                                            <label class="col-lg-3 control-label">I.G.V:</label>
                                                            <div class="col-lg-2">
                                                                <input type="number" id="txtIGV" class="control-form Reque popup" />
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="tab-pane" id="autorizacion" role="tabpanel">
                                            <div class="card">
                                                <div class="card-block">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <fieldset class="fieldset">
                                                                <legend class="legend">Autorización Ordenes</legend>
                                                                <div class="row form-group">
                                                                    <label class="col-lg-3 control-label">Director:</label>
                                                                    <div class="col-lg-9">
                                                                        <select id="cboDirector" class="SelectSearch control-form Reque popup"></select>
                                                                    </div>
                                                                </div>
                                                                <div class="row form-group">
                                                                    <label class="col-lg-3 control-label">Jefe de Logística:</label>
                                                                    <div class="col-lg-9">
                                                                        <select id="cboJelog" class="SelectSearch control-form Reque popup"></select>
                                                                    </div>
                                                                </div>
                                                            </fieldset>
                                                        </div>
                                                        <div class="col-md-6">
                                                            <fieldset class="fieldset">
                                                                <legend class="legend">Autorización Almacén</legend>
                                                                <div class="row form-group">
                                                                    <label class="col-lg-3 control-label">Jefe de Logística:</label>
                                                                    <div class="col-lg-9">
                                                                        <select id="cboJelogAlma" class="SelectSearch control-form Reque popup"></select>
                                                                    </div>
                                                                </div>
                                                                <div class="row form-group">
                                                                    <label class="col-lg-3 control-label">Jefe de Almacén:</label>
                                                                    <div class="col-lg-9">
                                                                        <select id="cboJefeAlmacen" class="SelectSearch control-form Reque popup"></select>
                                                                    </div>
                                                                </div>
                                                            </fieldset>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <button id="btnGuardar" class="btnGuardarForm bg-customer" title="Guardar datos"><span class="fa fa-save"></span>&nbsp;Grabar</button>
                </div>
            </div>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
<script src="~/Riztie/Js/App/AppLogistica.js"></script>

