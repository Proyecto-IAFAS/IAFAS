
@{
    ViewBag.Title = "CuentaBanca";
    Layout = "~/Views/_LayoutPage.cshtml";
}


<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3><i class="fa fa-file" aria-hidden="true"></i> Cuentas bancarias</h3>
                </div>
                <div class="card-block">
                    <div class="form-row">
                        <div class="form-group col-sm-2">
                            <button class="input-group-inverse btn btn-primary" id="btnNuevo">Nuevo <i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></button>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="table-responsive" id="divLista"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="modal custom-modal" tabindex="-1" role="dialog" aria-hidden="true" id="divPopupContainer" style="overflow-y:auto;">
                            <div class="modal-dialog modal-lg bg-personalizado" id="divPopupWindow" style="margin-top:30px;">
                                <div class="modal-content">
                                    <div id="divBarra" class="modal-header bg-personalizado" style="cursor:move">
                                        <h5 class="modal-title" id="tituloModal"></h5>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="form-group col-sm-12">
                                                <input type="hidden" class="control-form Popup" id="txtIdRegistro">
                                                <label class="control-label">Banco</label>
                                                <select id="cboBanco" class="SelectSearch control-form Reque Popup"></select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-5">
                                                <label class="control-label">Nro Cuenta</label>
                                                <input type="text" autocomplete="off" maxlength="20" id="txtCta" class="control-form Reque Popup" />
                                            </div>
                                            <div class="form-group col-sm-7">
                                                <label class="control-label">CCI</label>
                                                <input type="text" autocomplete="off" maxlength="20" id="txtCCI" class="control-form Popup" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-5">
                                                <label class="control-label">Moneda</label>
                                                <select id="cboMoneda" class="control-form Reque Popup"></select>
                                            </div>
                                            <div class="form-group col-sm-7">
                                                <label class="control-label">Cta Contable</label>
                                                <select id="cboCtaContable" class="control-form Reque Popup"></select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-8">
                                                <label class="control-label">Dirección</label>
                                                <input type="text" autocomplete="off" maxlength="100" id="txtDireccion" class="control-form Reque Popup" />
                                            </div>
                                            <div class="form-group col-sm-4">
                                                <label class="control-label">Apertura</label>
                                                <input type="date" autocomplete="off" id="dttApertura" class="control-form Reque Popup" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-8">
                                                <label class="control-label">Sectorista</label>
                                                <input type="text" autocomplete="off" maxlength="100" id="txtSectorista" class="control-form Reque Popup" />
                                            </div>
                                            <div class="form-group col-sm-4">
                                                <label class="control-label">Saldos Iniciales</label>
                                                <input type="number" autocomplete="off" id="txtSaldo" class="control-form Popup" />
                                            </div>
                                        </div>
                                        @*<div class="row">
                                                <div class="form-group col-sm-4">
                                                    <label class="control-label">Estado</label>
                                                    <select id="cboEstado" class="control-form Reque Popup"></select>
                                                </div>
                                            </div>*@
                                    </div>
                                    <div class="modal-footer">
                                        <button id="btnCancelar" class="btnCancelarForm" title="Cancelar"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancelar</button>
                                        <button id="btnGuardar" class="btnGuardarForm bg-customer" title="Guardar datos"><span class="fa fa-save"></span>&nbsp;Grabar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="styleSelector">
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
<script src="~/Riztie/Js/App/AppTeso.js"></script>

