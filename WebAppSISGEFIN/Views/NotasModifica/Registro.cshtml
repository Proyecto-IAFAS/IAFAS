
@{
    ViewBag.Title = "Registro Nota";

    byte _action = ViewBag.Action;
    int _idNota = ViewBag.IdNota;

    string _titulo = (_action == 1 ? "Nuevo" : "Modificar");

    Layout = "~/Views/Shared/_Layout.cshtml";

}

<style>
    .row {
        margin-bottom: 5px;
    }

    .modal-body {
        padding: 0px !important;
    }
</style>


<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">

                <div class="form-group col-sm-12">

                    <div class="row">
                        <label class="control-label col-sm-2">N°. Nota</label>
                        <div class="col-sm-10">
                            <input type="text" value="000000" readonly />
                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-2">Entidad</label>
                        <div class="col-sm-10">
                            <select class="control-form" id="cboEntidades"></select>
                        </div>
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-2">Tipo de Nota</label>
                        <div class="col-sm-10">
                            <select class="control-form" id="cboTiposNota"></select>
                        </div>
                    </div>


                    <div class="row">
                        <input type="button" class="btn btn-sm btn-primary" value="Agregar" onclick="AgregarItem()" />
                    </div>

                    <div class="row">
                        Grilla
                    </div>

                    <div class="row">
                        <label class="control-label col-sm-2">Glosa</label>
                        <div class="col-sm-10">
                            <textarea id="txtGlosa" rows="3" style="width:100%"></textarea>
                        </div>
                    </div>


                </div>

            </div>

        </div>

    </div>

</div>


<div class="row">

    <div class="modal custom-modal" tabindex="-1" role="dialog" aria-hidden="true" id="divBuscador" style="overflow-y: auto;">
        <div class="modal-dialog modal-xl bg-personalizado" id="divPopupWindow" style="margin-top:20px;">
            <div class="modal-content">

                <div id="divBarra" class="modal-header bg-personalizado" style="cursor:move">
                    <h5 class="modal-title" id="tituloModal"></h5>
                </div>

                <div class="modal-body">

                    <iframe id="ifmRegist"
                            src="about://black"
                            frameborder="0"
                            style="position:relative;
                                                       left:0; top:0;
                                                       width:100%;
                                                       height:80vh">
                    </iframe>

                </div>

                <div class="modal-footer">
                    <button id="btnCerrar" class="btnCancelarForm" title="Cerrar formulario"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cerrar</button>
                    <button id="btnTransf" class="btnGuardarForm bg-customer" title="Aceptar selección"><span class="fa fa-save"></span>&nbsp;Aceptar</button>
                </div>

            </div>

        </div>
    </div>

</div>

<script src="~/Riztie/Js/App/AppNotasRegt.js"></script>
