
@{
    ViewBag.Title = "Mantenimiento de Notas Modificatorias";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3><i class="fa fa-users" aria-hidden="true"></i>@ViewBag.Title</h3>
                </div>
                <div class="card-block">

                    <div class="form-row">
                        <div class="form-group col-sm-1">
                            <label class="control-label">Periodo</label>
                            <input type="number" id="txtPeriodoCons" class="control-form PopupCons" value="@ViewBag.Anio">
                        </div>
                        <div class="form-group col-md-4 m-3">
                            <button class="input-group-inverse btn btn-dark" id="btnConsultar" data-toggle="tooltip" data-placement="bottom" title="Consultar"><i class="fa fa-search fa-lg" aria-hidden="true"></i></button>
                            <button class="input-group-inverse btn btn-primary" id="btnNuevoMov" onclick="AgregarNota()" data-toggle="tooltip" data-placement="bottom" title="Nuevo">Nuevo <i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></button>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="table-responsive" id="divLista"></div>
                        </div>
                    </div>

                    <div class="form-row">
                        @{Html.RenderAction("Registro", "NotasModifica", new { act = 1, idn = 0 });}
                     </div>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function AgregarNota() {
        divPopupContainer.style.display = "block";
    }
</script>
