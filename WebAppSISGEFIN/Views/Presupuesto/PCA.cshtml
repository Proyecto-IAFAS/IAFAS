
@{
    ViewBag.Title = "Asignacion";
    Layout = "~/Views/_LayoutPage.cshtml";
}

<div class="pcoded-content">
    <div class="pcoded-inner-content">
        <div class="main-body">
            <div class="card">
                <div class="card-header bg-primary">
                    <h3><i class="fa fa-industry" aria-hidden="true"></i> @ViewBag.AnhoActual -  PROGRAMACIÓN DE COMPROMISOS ANUAL</h3>
                </div>
                <div class="card-block">
                    <div class="form-row">
                        <div class="form-group col-sm-2">
                            <button class="input-group-inverse btn btn-primary" id="btnNuevo">Nuevo <i class="fa fa-plus-circle fa-lg" aria-hidden="true"></i></button>
                        </div>

                        <div class="form-group col-sm-4">
                            <input type="hidden" id="peridoanho" value="@ViewBag.AnhoActual"/>
                            <label class="col-form-label" style="font-size:18px;color:#0D88E6;font-weight:bold">
                                <i class="fa fa-calendar" aria-hidden="true"></i> Año Fiscal : @ViewBag.AnhoActual
                            </label>
                        </div>
                        <div class="form-group col-sm-4">
                            <label class="col-form-label" id="totalsumAnho" style="font-size:18px;color:#0D88E6;font-weight:bold">
                                <i class="fa fa-money" aria-hidden="true"></i> Total : @ViewBag.AnhoActual
                            </label>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-12">
                            <div class="table-responsive" id="divLista"></div>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="modal custom-modal" tabindex="-1" role="dialog" aria-hidden="true" id="divPopupContainer" style="overflow-y:auto;">
                            <div class="modal-dialog modal-lg bg-personalizado" id="divPopupWindow" style="margin-top:30px;">
                                <div class="modal-content">
                                    <div id="divBarra" class="modal-header bg-personalizado" style="cursor:move">
                                        <h5 class="modal-title" id="tituloModal">Nuevo Registro</h5>
                                    </div>
                                    <div class="modal-body">
                                        <div class="row">
                                            <div class="form-group col-sm-2">
                                                <input type="hidden" class="control-form Popup" id="txtIdRegistro">
                                                <label class="control-label">Año</label>
                                                <input type="number" autocomplete="off" class="control-form Popup" style="background-color: #FCFAC5" id="txtAnho" placeholder="@ViewBag.AnhoActual" readonly>
                                            </div>
                                            <div class="form-group col-sm-5">
                                                <label class="control-label">Centro de Costo</label>
                                                <select id="cboEntidad" class="control-form Reque Popup"></select>
                                            </div>
                                            <div class="form-group col-sm-5">
                                                <label class="control-label">Fuente Financiamiento</label>
                                                <select id="cboFuenteFto" class="control-form Reque Popup"></select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-12">
                                                <label class="control-label">Meta</label>
                                                <select id="cboMeta" class="SelectSearch control-form Reque Popup"></select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-12">
                                                <label class="control-label">SubMeta</label>
                                                <select id="cboSubMeta" class="SelectSearch control-form Reque Popup"></select>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-3">
                                                <label class="control-label">PIA</label>
                                                <input type="text" autocomplete="off" class="control-form Reque Popup"  id="txtPia">
                                            </div>
                                            <div class="form-group col-sm-3">
                                                <label class="control-label">PIM</label>
                                                <input type="text" autocomplete="off" class="control-form Reque Popup"  id="txtPim">
                                            </div>
                                            <div class="form-group col-sm-3">
                                                <label class="control-label">Ejecutado</label>
                                                <input type="text" autocomplete="off" class="control-form Popup" style="background-color: #FCFAC5" id="txtEjecutado" placeholder="0000" readonly>
                                            </div>
                                            <div class="form-group col-sm-3">
                                                <label class="control-label">Disponible</label>
                                                <input type="text" autocomplete="off" class="control-form Popup" style="background-color: #FCFAC5"  id="txtDisponible" placeholder="0000" readonly>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="form-group col-sm-4">
                                                <label class="control-label">Estado</label>
                                                <select id="cboEstado" class="control-lectura Reque Popup"></select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button id="btnCancelar" class="btnCancelarForm" title="Cancelar"><i class="fa fa-undo" aria-hidden="true"></i>&nbsp;Cancelar</button>
                                        <button id="btnGuardar" class="btnGuardarForm bg-customer" title="Guardar datos"><span class="fa fa-save"></span>&nbsp;Grabar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<iframe name="print_frame" width="0" height="0" frameborder="0" src="about:blank"></iframe>
<script src="~/Riztie/Js/App/AppPresu.js"></script>

